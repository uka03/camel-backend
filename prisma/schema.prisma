generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Entry {npx prisma migrate dev
  id        String   @id @default(uuid())
  authorId  String  
  author    User    @relation(fields: [authorId], references: [id])
  title     String
  categoryId String
  category  Category @relation(fields: [categoryId], references: [id])   
  year      Int?
  content   String
  source    String?
  location  String?
  createdAt DateTime @default(now())
}
model Category {npx prisma migrate dev
  id        String   @id @default(uuid())
  name      String   @unique
  entries   Entry[]
  createdAt DateTime @default(now())
}

enum Role {
  admin
  editor
  reader
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  name String
  roles    Role[]   
  createdAt DateTime @default(now())
  Entry Entry[]
}
